{
    "name": "omegacode/jwt-secured-api-core",
    "description": "This is a the simple JWT based API core package.",
    "homepage": "https://github.com/0m3gaC0d3/jwt-secured-api-core",
    "license": "MIT",
    "authors": [
        {
            "name": "Wolf Utz",
            "email": "wpu@hotmail.de"
        }
    ],
    "require": {
        "ext-json": "*",
        "php": ">=7.4",
        "slim/psr7": "^0.5",
        "slim/slim": "^4.1",
        "doctrine/dbal": "^2.10",
        "symfony/dotenv": "^5.0",
        "symfony/dependency-injection": "^5.0",
        "symfony/config": "^5.0",
        "symfony/yaml": "^5.0",
        "symfony/event-dispatcher":"^5.0",
        "http-interop/http-factory-guzzle": "^1.0",
        "lcobucci/jwt": "^3.3",
        "cakephp/chronos": "^2.0",
        "monolog/monolog": "^2.0",
        "ramsey/uuid": "^3.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.5",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "0.12.*",
        "phpmd/phpmd": "^2.8",
        "kint-php/kint": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "OmegaCode\\JwtSecuredApiCore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OmegaCode\\JwtSecuredApiCore\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "7.4"
        },
        "process-timeout": 0
    },
    "scripts": {
        "test": [
            "./.ci/scripts/ciRunner.sh -s unit"
        ],
        "lint": [
            "./.ci/scripts/ciRunner.sh -s lint"
        ],
        "php-fix": [
            "./.ci/scripts/ciRunner.sh -s php-fix"
        ],
        "build": [
            "./.ci/scripts/ciRunner.sh -s build"
        ],
        "quality": [
            "./.ci/scripts/ciRunner.sh -s quality"
        ]
    }
}
