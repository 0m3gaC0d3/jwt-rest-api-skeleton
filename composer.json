{
    "name": "omegacode/jwt-secured-api-core",
    "description": "This is a the simple JWT based API core package.",
    "homepage": "https://github.com/0m3gaC0d3/jwt-secured-api-core",
    "license": "MIT",
    "authors": [
        {
            "name": "Wolf Utz",
            "email": "wpu@hotmail.de"
        }
    ],
    "require": {
        "ext-json": "*",
        "ext-openssl": "*",
        "php": ">=7.4",
        "slim/psr7": "^0.5",
        "slim/slim": "^4.1",
        "doctrine/dbal": "^2.10",
        "symfony/dotenv": "^5.0",
        "symfony/dependency-injection": "^5.0",
        "symfony/config": "^5.0",
        "symfony/yaml": "^5.0",
        "symfony/event-dispatcher": "^5.0",
        "http-interop/http-factory-guzzle": "^1.0",
        "lcobucci/jwt": "3.3.*",
        "cakephp/chronos": "^2.0",
        "monolog/monolog": "^2.0",
        "ramsey/uuid": "^3.9",
        "symfony/console": "^5.0",
        "symfony/cache": "^5.0",
        "symfony/finder": "^5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.5",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "0.12.*",
        "phpmd/phpmd": "^2.8",
        "kint-php/kint": "^3.3",
        "guzzlehttp/guzzle": "^6.5",
        "symfony/var-dumper": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "OmegaCode\\JwtSecuredApiCore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OmegaCode\\JwtSecuredApiCore\\Tests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "process-timeout": 0
    },
    "scripts": {
        "unit": [
            "./.ci/scripts/console.sh -s unit -p 7.4"
        ],
        "e2e": [
            "./.ci/scripts/console.sh -s e2e -p 7.4"
        ],
        "lint": [
            "./.ci/scripts/console.sh -s lint -p 7.4"
        ],
        "fix": [
            "./.ci/scripts/console.sh -s fix -p 7.4"
        ],
        "build": [
            "./.ci/scripts/console.sh -s build -p 7.4"
        ],
        "quality": [
            "./.ci/scripts/console.sh -s quality -p 7.4"
        ]
    },
    "bin": [
        "bin/console"
    ]
}
