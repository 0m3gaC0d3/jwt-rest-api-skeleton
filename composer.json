{
    "name": "omegacode/jwt-secured-api-skeleton",
    "type": "project",
    "description": "This is a simple jwt based API skeleton to kick start your API development.",
    "homepage": "https://github.com/0m3gaC0d3/jwt-secured-api-skeleton",
    "license": "MIT",
    "require": {
        "ext-json": "*",
        "php": ">=7.4",
        "slim/psr7": "^0.5",
        "slim/slim": "^4.1",
        "doctrine/dbal": "^2.10",
        "symfony/dotenv": "^5.0",
        "symfony/dependency-injection": "^5.0",
        "symfony/config": "^5.0",
        "symfony/yaml": "^5.0",
        "doctrine/annotations": "^1.8",
        "http-interop/http-factory-guzzle": "^1.0",
        "lcobucci/jwt": "^3.3",
        "cakephp/chronos": "^2.0",
        "monolog/monolog": "^2.0",
        "ramsey/uuid": "^3.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "omegacode/t3-debugger-utility-standalone": "^1.0",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "0.12.*",
        "phpmd/phpmd": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "7.4"
        },
        "process-timeout": 0
    },
    "scripts": {
        "test": [
            "./.ci/scripts/ciRunner.sh -s unit"
        ],
        "lint": [
            "./.ci/scripts/ciRunner.sh -s lint"
        ],
        "build": [
            "./.ci/scripts/ciRunner.sh -s build"
        ],
        "quality": [
            "./.ci/scripts/ciRunner.sh -s quality"
        ]
    }
}
